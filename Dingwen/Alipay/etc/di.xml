<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="AlipayGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">DingWen\Alipay\Model\PCPay::PAYMENT_GATEWAY_NAME_CODE</argument>
        </arguments>
    </virtualType>
    <type name="Dingwen\Alipay\Model\Adapter\AlipayAdapter">
        <arguments>
            <argument name="config" xsi:type="object">AlipayGatewayConfig</argument>
        </arguments>
    </type>
</config>
